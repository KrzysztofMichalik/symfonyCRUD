{% extends "base.html.twig" %}
{%  block body %}
    <div class="container">
        <div class="row">
            <h3 class="col-md-6 offset-md-3 mt-5 mb-5">Create Form</h3>
            <div class="col-md-6 offset-md-3">
                {% for message in app.flashes('notice') %}
                    <div class="alert alert-success">
                        {{ message }}
                    </div>
                {% endfor %}
            </div>

            <div class="col-md-6 offset-md-3">
                {{ form_start(form) }}
                    <div>
                        <label>
                            {{ form_label(form.name) }}
                        </label>
                        {{ form_widget(form.name,{'attr':{'class':'form-control'}}) }}
                        <div class="alert alert-danger p-0 mt-3" style="border:none;" role="alert">
                            {{ form_errors(form.name) }}
                        </div>
                    </div>
                    <div>
                        <label>
                            {{ form_label(form.description) }}
                        </label>
                        {{ form_widget(form.description,{'attr':{'class':'form-control'}}) }}
                        <div class="alert alert-danger p-0 mt-3" style="border:none;" role="alert">
                            {{ form_errors(form.description) }}
                        </div>
                    </div>
                    <div>
                        <label>
                            {{ form_label(form.price) }}
                        </label>
                        {{ form_widget(form.price,{'attr':{'class':'form-control'}}) }}
                        <div class="alert alert-danger p-0 mt-3" style="border:none;" role="alert">
                            {{ form_errors(form.price) }}
                        </div>
                    </div>
                    <div>
                        <label>
                            {{ form_label(form.expireDate) }}
                        </label>
                        {{ form_widget(form.expireDate) }}
                        <div class="alert alert-danger p-0 mt-3" style="border:none;" role="alert">
                            {{ form_errors(form.expireDate) }}
                        </div>
                    </div>
                    <div>
                        <label>
                            {{ form_label(form.category) }}
                        </label>
                        {{ form_widget(form.category,{'attr':{'class':'form-control form-select'}}) }}
                        <div class="alert alert-danger p-0 mt-3" style="border:none;" role="alert">
                            {{ form_errors(form.category) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-info mt-2 text-white">Submit</button>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{%  endblock %}